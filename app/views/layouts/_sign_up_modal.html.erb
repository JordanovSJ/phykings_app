<!-- Modal -->
<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="signup">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="signup">Sign up</h4>
        <%= devise_error_messages! %>
      </div>
      <div class="modal-body">
				
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

				<div class="row">
					
				<div class="col-sm-6">
					<div class="field form-group">
						<%= f.label "Email*" %><br />
						<%= f.email_field :email, autofocus: true, class: "form-control" %>
					</div>
					
					<div class="field form-group">
						<%= f.label "First name*" %><br />
						<%= f.text_field :first_name, autocomplete: "off", class: "form-control" %>
					</div>
					
					<div class="field form-group">
						<%= f.label "Last name*" %><br />
						<%= f.text_field :last_name, autocomplete: "off", class: "form-control" %>
					</div>
					
					<div class="field form-group">
						<%= f.label "Age*" %><br />
						<%= f.text_field :age, autocomplete: "off", class: "form-control" %>
					</div>
					
				</div>
				<div class="col-sm-6 ">
					
					<div class="field form-group">
					<%= f.label "Country*" %><br />
					<%= f.country_select :country, {prompt: 'Please select a country'}, {class: "form-control"} %>
					</div>
					
					<div class="field form-group">
						<%= f.label :school_name %><br />
						<%= f.text_field :school_name, autocomplete: "off", class: "form-control"%>
					</div>

					<div class="field form-group">
						<%= f.label "Password*" %>
						<% if @minimum_password_length %>
						<em>(<%= @minimum_password_length %> characters min)</em>
						<% end %><br />
						<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
					</div>

					<div class="field form-group">
						<%= f.label "Password confirmation*" %><br />
						<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
					</div>

				</div>

				</div>
				<div class="actions text-center">
					<p>A confirmation email will be sent to the email you provide. You need to click the confirmation link in the email in order to activate your account.</p>
					<%= f.submit "Sign up", class: "btn btn-default btn-lg" %>
				</div>
				<% end %>
				
      </div>
      
      <div class="modal-footer">
				<div class="row text-center">
					<div class="col-sm-6">
						<%= link_to raw('<span class="icon fa-facebook"></span> | Facebook'), user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>
					</div>
					<div class="col-sm-6">
						<%= link_to raw('<span class="icon fa-google-plus"></span> | Google+'), user_omniauth_authorize_path(:google_oauth2), class: "btn btn-danger" %>
					</div>
        </div>
        
        <div class="row text-center">
					<div class="col-sm-12">
						<%= link_to "Forgot your password?", "#forgot-pass", data: {toggle: "modal", target: "#forgot-pass"} %><br/>
						<%= link_to "Didn't receive confirmation instructions?", "#resend-conf", data: {toggle: "modal", target: "#resend-conf"} %>
					</div>
        </div>
      </div>
      
    </div>
  </div>
</div>
