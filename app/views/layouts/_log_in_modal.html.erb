<!-- Modal -->
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="login">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="login">Log in</h4>
      </div>
      <div class="modal-body">
				
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			
					<div class="header-text">
						<%= render 'layouts/error_messages' %>
					</div>
					
					<div class="field form-group text-center">
						<%= f.label :email %><br />
						<%= f.email_field :email, autofocus: true, class: "form-control" %>
					</div>

					<div class="field form-group text-center">
						<%= f.label :password %><br />
						<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
					</div>

					<% if devise_mapping.rememberable? -%>
						<div class="field text-center">
							<%= f.check_box :remember_me %>
							<%= f.label :remember_me %>
						</div>
					<% end -%>

					<div class="actions text-center">
						<%= f.submit "Log in", class: "btn btn-default btn-lg" %>
					</div>

				<% end %>
				
      </div>
      
      <div class="modal-footer">
				<div class="row text-center">
					<div class="col-sm-4">
						<%= link_to raw('<span class="icon fa-facebook"></span> | Facebook'), user_omniauth_authorize_path(:facebook), class: "btn btn-primary" %>
					</div>
					<div class="col-sm-4">
						<%= link_to raw('<span class="icon fa-google-plus"></span> | Google+'), user_omniauth_authorize_path(:google_oauth2), class: "btn btn-danger" %>
					</div>
					<div class="col-sm-4">
						<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#signup">
								Email sign up
						</button>
					</div>
        </div>
        
        <div class="row text-center">
					<div class="col-sm-12">
						<%= link_to "Forgot your password?", "#forgot-pass", data: {toggle: "modal", target: "#forgot-pass"} %><br/>
						<%= link_to "Didn't receive confirmation instructions?", "#resend-conf", data: {toggle: "modal", target: "#resend-conf"} %>
					</div>
        </div>
      </div>
      
    </div>
  </div>
</div>
