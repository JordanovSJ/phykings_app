<h1 class="page-header">
	Stats
</h1>

<div class="panel panel-default">
	
	<div class="panel-heading text-center">
    <h1 class="panel-title"><%= current_user.first_name + " " + current_user.last_name %></h1>
  </div>
  
  <div class="panel-body">
		
		<div class="col-sm-6">
			<div class="panel panel-default">
				<div class="panel-heading text-center">
					<h3 class="panel-title">Free Games</h3>
				</div>
				<div class="panel-body">
					<ul class="list-group">
						<li class="list-group-item">Number of games: <%= label_tag "41", nil, class: "label label-default pull-right" %></li>
						<li class="list-group-item">Attempted problems: <%= label_tag "123", nil, class: "label label-default pull-right" %></li>
						<li class="list-group-item">Solved problems: <%= label_tag "100", nil, class: "label label-default pull-right" %></li>
						<li class="list-group-item">Effectiveness (ratio): <%= label_tag (10000.0/123).round(1).to_s+"%", nil, class: "label label-default pull-right" %></li>
					</ul>
					<h3><%=label_tag "Free Level: "+current_user.free_level.to_s, 
								 nil, class: "label label-default" %></h3>
				</div>
			</div>
		</div>
		
		<div class="col-sm-6">
			<div class="panel panel-default">
				<div class="panel-heading text-center">
					<h3 class="panel-title">Premium Games</h3>
				</div>
				<div class="panel-body">
					<ul class="list-group">
						<li class="list-group-item">Number of games: <%= label_tag "41", nil, class: "label label-success pull-right" %></li>
						<li class="list-group-item">Attempted problems: <%= label_tag "123", nil, class: "label label-success pull-right" %></li>
						<li class="list-group-item">Solved problems: <%= label_tag "100", nil, class: "label label-success pull-right" %></li>
						<li class="list-group-item">Effectiveness (ratio): <%= label_tag (10000.0/123).round(1).to_s+"%", nil, class: "label label-success pull-right" %></li>
					</ul>
					<h3><%=label_tag "Premium Level: "+current_user.premium_level.to_s, 
								 nil, class: "label label-success" %>
					<%=label_tag "Gold: "+current_user.gold.to_s, 
								 nil, class: "label label-warning" %></h3>
				</div>
			</div>
		</div>
		
  </div>
  
</div>


