<div class="panel panel-default text-center">
	<div class="panel-body">
		
		<p>Was this solution helpful?</p>
		
		<div class="col-sm-6">
			<%= link_to raw("<span class=\"glyphicon glyphicon-chevron-up\"></span>"), vote_solutions_path(vote: true), method: "post", remote: true, class: "btn btn-success col-sm-12" %>
		</div>
		
		<div class="col-sm-6">
			<%= link_to raw("<span class=\"glyphicon glyphicon-chevron-down\"></span>"), vote_solutions_path(vote: false), method: "post", remote:true, class: "btn btn-danger col-sm-12" %>
		</div>
	</div>
</div>
