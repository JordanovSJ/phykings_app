<div class="col-sm-3 text-center">
	<div class="panel panel-default">
		<div class="panel-body">
			<p>You have submitted your answers. Results will be displayed as soon as everyone is done.</p>
			<%= image_tag "loading_spinner.gif", id: "submitted-competition-loading" %>
		</div>
		<!-- List group -->
		<ul class="list-group">
			<% @competition.users.each do |u| %>
				<li class="list-group-item">
					<%= u.first_name + " " + u.last_name %>
					<% if u.submitted_competition? %>
						<i class="glyphicon glyphicon-ok"></i>
					<% end %>
				</li>
			<% end %>
		</ul>
	</div>
</div>

<div class="col-sm-9">
	<div class="panel panel-default">
		<div class="panel-heading">Your result</div>
		<div class="panel-body">
			
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Problem</th>
						<th>Your answer</th>
						<th>Check</th>
						<th>Answer</th>
						<th>Percent</th>
					</tr>
				</thead>
				<tbody>
					<% @competition.problems.each do |prob| %>
						<tr>
							<td><%= link_to prob.title, problem_path(prob) %></td>
							<td>
								$<%= current_user.results["answer_#{prob.id}"][:answer] %>
								 \times 
								 10^{<%= current_user.results["answer_#{prob.id}"][:degree_of_answer] %>} 
								 <%= prob.units_of_answer %>$
							</td>
							<td>
								<% if current_user.results["answer_#{prob.id}"][:check_answer] %>
									<i class="glyphicon glyphicon-ok"></i>
								<% else %>
									<i class="glyphicon glyphicon-remove"></i>
								<% end %>
							</td>
							<td>
								<% if current_user.id == prob.creator_id || ( current_user.relation_of(prob).present? &&
											current_user.relation_of(prob).can_see_answer?) %>
									<%= "$ #{prob.answer} \\times 10^{#{prob.degree_of_answer}} #{prob.units_of_answer}$ " %>
								<% else %>
									<%= link_to "Unlock (#{COST_TO_UNLOCK_ANSWER} gold)", "#", method: "post", class: "btn btn-xs btn-info", data: {confirm: "#{COST_TO_UNLOCK_ANSWER} gold will be deducted from your account."}, remote: true %>
								<% end %>
							</td>
							<td>100%</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			
			<div class="col-sm-6 col-sm-offset-3">
				<div class="panel panel-default text-center">
					<div class="panel-body">
						<h2>100%</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
