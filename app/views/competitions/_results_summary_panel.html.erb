<div class="col-sm-6 col-sm-offset-3">
	<div class="panel panel-default text-center">
		<div class="panel-heading">Your summary</div>
		<div class="panel-body">
			
			<div class="table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Score</th>
							<th>Rank</th>
							<th>Level</th>
							<th>Gold</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><span class="badge alert-success"><%= user_score(current_user, @competition) %>%</span></td>
							<td><span class="label label-info">Rank: <%= current_user.results["rank"] %></span></td>
							<td>
								<% lvl_change = current_user.results["lvl_change"] %>
								<% if @competition.entry_gold >= 500 %>
									<span class="label label-success">
								<% else %>
									<span class="label label-default">
								<% end %>
									<%= "+" if lvl_change > 0 %><%= lvl_change %>
								</span>
							</td>
							<td>
								<% if current_user.results.has_key?(:gold_change) %>
									<span class="label label-warning">+<%= current_user.results["gold_change"] %></span>
								<% else %>
									<span class="label label-warning">n/a</span>
								<% end %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			
			</div>
		</div>
	</div>
</div>
