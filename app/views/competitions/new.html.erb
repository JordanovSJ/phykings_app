<%= form_for(@competition) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.label :n_players %>
<%= f.number_field :n_players, class: 'form-control' %>

<%= f.label :length %>
<%= f.number_field :length, class: 'form-control' %>

<%= f.label :entry_gold %>
<%= f.number_field :entry_gold, class: 'form-control' %>


<%= f.submit "Create competition", class: "btn btn-primary" %>
<% end %>
