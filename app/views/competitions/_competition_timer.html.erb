<% if @competition.started_at? %>
	<div class="col-sm-6">
		<div class="panel panel-default text-center">
			<div class="panel-body">
				
					<% remaining_time = @competition.length*60 - (Time.now - @competition.started_at) %>
					<div class="container-fluid" id="competition-timer">
						<%= Time.at( (remaining_time>0) ? remaining_time : 0 ).utc.strftime("%H:%M:%S")  %>
					</div>

			</div>
		</div>
	</div>
	
	<%= javascript_tag "setCompetitionTimer(#{remaining_time.to_i})" %>
	
<% end %>
